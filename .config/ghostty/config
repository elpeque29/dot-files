# Remove Top Bar
gtk-titlebar = false
window-decoration = true
# Preferences
font-size = 10
theme = GruvboxDarkHard
background-opacity = 0.70
mouse-hide-while-typing = true
# Keybinds
keybind = ctrl+l=clear_screen
keybind = ctrl+t=new_tab
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=toggle_tab_overview

keybind = ctrl+b>h=goto_split:left
keybind = ctrl+b>j=goto_split:bottom
keybind = ctrl+b>k=goto_split:top
keybind = ctrl+b>l=goto_split:right

keybind = ctrl+b>n>h=new_split:left
keybind = ctrl+b>n>j=new_split:down
keybind = ctrl+b>n>k=new_split:up
keybind = ctrl+b>n>l=new_split:right
keybind = ctrl+b>f=toggle_split_zoom
keybind = ctrl+b>q=close_surface
